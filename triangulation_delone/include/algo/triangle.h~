#ifndef TRIANGLE_H_
#define TRIANGLE_H_
	#include "geom/point.h"

	struct Triangle { 
		Triangle(const point_type& a, const point_type& b, const point_type& c, bool Wedge);
		private:
			struct Coordinates { 
				point_type first; 
				point_type second; 
				point_type third;

				Coordinates(const point_type& a, const point_type& b, const point_type& c);
			};

			bool isWedge; 
 	}; 
#endif
